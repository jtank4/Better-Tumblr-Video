{
	"manifest_version": 2,
    "name": "Better Tumblr Video",
    "description": "Replaces Tumblr's video player (that lacks volume control) with a player with a volume bar.",
    "version": "0.107",
	"icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
	"browser_action": {
		"default_popup": "popup.html"
	},
    "content_scripts": [
        {
            "matches": ["*://*.tumblr.com/*"],
			"css":[
				"vid.css",
				"plyr/plyr.css"
			],
            "js": [
                "content.js",
				"plyr/plyr.min.js"
            ],
            "run_at": "document_end"
        }
    ],
	"permissions":["storage"]
	
}